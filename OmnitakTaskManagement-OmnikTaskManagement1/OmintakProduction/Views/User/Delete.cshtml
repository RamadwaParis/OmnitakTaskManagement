@{
}
@model OmintakProduction.Models.User

@{
    ViewBag.Title = "Delete User";
}

<h2>Delete User</h2>

@* Confirm deletion prompt *@
<h3>Are you sure you want to delete this User?</h3>

<div>
    <h4>User</h4>
    <hr />

    @* Display ticket details in a definition list *@
    <dl class="dl-horizontal">
        <dt>Username</dt>
        <dd>@Model.UserName</dd>
    </dl>
</div>

@* Begin form for deleting the ticket *@
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken() @* Prevents CSRF attacks *@
    @Html.HiddenFor(model => model.UserId) @* Hidden field to send ticket ID to the server *@

    <input type="submit" asp-controller="User" asp-action="DeleteConfirmed" asp-route-id="@Model.UserId" value="Delete" class="btn btn-danger" /> @* Submit button to delete ticket *@
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" }) @* Link to return to list without deleting *@
}
