@model OmintakProduction.Models.User;

@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

<style>
    html, body {
        height: 100%;
        overflow: hidden;
    }
    
    .register-wrapper {
        height: 100vh;
        overflow: hidden;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
    }
    
    .register-card {
        max-width: 400px;
        width: 90%;
        border-radius: 15px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    }
</style>

<div class="register-wrapper">
    <div class="card register-card border-0">
        <div class="card-body p-5">
            <div class="text-center mb-4">
                <i class="fas fa-tasks text-primary" style="font-size: 3rem;"></i>
                <h2 class="mt-3 mb-1 text-dark">Create Account</h2>
                <p class="text-secondary">Join the Omnitak team</p>
            </div>

            @if (ViewData["RegistrationError"] != null)
            {
                <div class="alert alert-danger d-flex align-items-center" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @ViewData["RegistrationError"]
                </div>
            }

            @if (TempData["RegistrationSuccess"] != null)
            {
                <div class="alert alert-success d-flex align-items-center" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["RegistrationSuccess"]
                </div>
            }

            <form asp-controller="Account" asp-action="Register" method="post">
                <div class="mb-3">
                    <label for="username" class="form-label text-dark">
                        <i class="fas fa-user me-2"></i>Username
                    </label>
                    <input type="text" id="username" asp-for="@Model.UserName" name="username" 
                           class="form-control form-control-lg" 
                           placeholder="Choose a username" required />
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label text-dark">
                        <i class="fas fa-envelope me-2"></i>Email Address
                    </label>
                    <input type="email" id="email" asp-for="Email" name="email" 
                           class="form-control form-control-lg" 
                           placeholder="Enter your email address" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label for="password" class="form-label text-dark">
                        <i class="fas fa-lock me-2"></i>Password
                    </label>
                    <input type="password" id="password" asp-for="Password" name="password" 
                           class="form-control form-control-lg" 
                           placeholder="Choose a strong password" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-user-plus me-2"></i>Create Account
                    </button>
                </div>

                <div class="text-center">
                    <p class="mb-0 text-dark">Already have an account? 
                        <a asp-controller="Account" asp-action="Login" class="text-decoration-none fw-bold text-primary">
                            Sign in here
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>
