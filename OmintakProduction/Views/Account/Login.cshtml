@model OmintakProduction.Models.User;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

@if (ViewData["LoginError"] != null)
{
    <div class="alert alert-warning" role="alert">
        @ViewData["LoginError"]
    </div>
}

<div class="container-fluid d-flex justify-content-center align-items-center min-vh-100">
    <div class="auth-card">
        <div class="card-header">
            <i class="fas fa-sign-in-alt mb-3" style="font-size: 2rem;"></i>
            <h3 class="mb-0 fw-bold">Welcome Back</h3>
            <p class="mb-0 mt-2 opacity-75">Sign in to your account</p>
        </div>
        <div class="card-body">
            <form asp-controller="Account" asp-action="Login" method="post" class="needs-validation" novalidate>

                <div class="mb-4">
                    <label for="email" class="form-label fw-semibold d-block mb-2">
                        <i class="fas fa-envelope me-2"></i>Email Address
                    </label>
                    <input type="email" id="email" asp-for="@Model.Email" name="email" 
                           class="form-control form-control-lg" 
                           placeholder="Enter your email address" required />
                    <div class="invalid-feedback">
                        Please enter a valid email address.
                    </div>
                </div>

                <div class="mb-4">
                    <label for="password" class="form-label fw-semibold d-block mb-2">
                        <i class="fas fa-lock me-2"></i>Password
                    </label>
                    <input type="password" id="password" asp-for="@Model.Password" name="password" 
                           class="form-control form-control-lg" 
                           placeholder="Enter your password" required />
                    <div class="invalid-feedback">
                        Please enter your password.
                    </div>
                </div>

                <div class="d-grid gap-3">
                    <button type="submit" class="btn btn-info btn-lg shadow-sm">
                        <i class="fas fa-sign-in-alt me-2"></i> Sign In
                    </button>

                    <div class="text-center">
                        <span class="text-muted">Don't have an account?</span>
                    </div>

                    <a asp-controller="Account" asp-action="Register" class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-user-plus me-2"></i> Create Account
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>
