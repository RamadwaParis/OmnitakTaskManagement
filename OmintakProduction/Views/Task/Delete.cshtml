@model OmintakProduction.Models.TaskAssignment
@{
    ViewData["Title"] = "Delete Task";
}
<h2>Delete Task</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Task</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Task ID</dt>
        <dd class="col-sm-10">@Model.TaskAssignmentId</dd>
        <dt class="col-sm-2">Project</dt>
        <dd class="col-sm-10">@Model.Project?.ProjectName</dd>
        <dt class="col-sm-2">Assigned User</dt>
        <dd class="col-sm-10">@Model.User?.UserName</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
        <dt class="col-sm-2">Due Date</dt>
        <dd class="col-sm-10">@Model.DueDate.ToShortDateString()</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="TaskAssignmentId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
