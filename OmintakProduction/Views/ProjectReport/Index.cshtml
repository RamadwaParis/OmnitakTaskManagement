@model IEnumerable<OmintakProduction.Models.ProjectReport>
@{
    ViewData["Title"] = "Project Reports";
}
<div class="work-item-card">
    <div class="work-item-header">
        <h2 class="work-item-title mb-0">
            <i class="fas fa-file-alt me-2"></i>Project Reports
        </h2>
    </div>
    <div class="work-item-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Project</th>
                    <th>Details</th>
                    <th>Created At</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var report in Model)
                {
                    <tr>
                        <td>@report.Project?.ProjectName</td>
                        <td>@report.ReportDetails</td>
                        <td>@report.CreatedAt.ToString("yyyy-MM-dd")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
