@model OmintakProduction.Models.TaskComment
@{
    ViewData["Title"] = "Add Comment";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-dark">
                    <h5 class="mb-0"><i class="fas fa-comment-alt me-2"></i>Add Task Comment</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <input type="hidden" asp-for="TaskId" value="@ViewBag.TaskId" />
                        
                        <div class="mb-3">
                            <label asp-for="Comment" class="form-label">Comment</label>
                            <textarea asp-for="Comment" class="form-control" rows="4" 
                                      placeholder="Enter your comment here... You can use @@username to mention team members"></textarea>
                            <span asp-validation-for="Comment" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-controller="Task" asp-action="Details" asp-route-id="@ViewBag.TaskId" 
                               class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Task
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Add Comment
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
