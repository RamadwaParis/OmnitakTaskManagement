@{
}
@model OmintakProduction.Models.Project

@{
    ViewBag.Title = "Delete Project";
}

<h2>Delete Project</h2>

@* Confirm deletion prompt *@
<h3>Are you sure you want to delete this Project?</h3>

<div>
    <h4>Project</h4>
    <hr />

    @* Display ticket details in a definition list *@
    <dl class="dl-horizontal">
        <dt>ProjectName</dt>
        <dd>@Model.ProjectName</dd>

        <dt>Description</dt>
        <dd>@Model.Description</dd>

        <dt>Due Date</dt>
        <dd>@Model.DueDate.ToShortDateString()</dd>

        <dt>Status</dt>
        <dd>@Model.Status</dd>


    </dl>
</div>

@* Begin form for deleting the ticket *@
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken() @* Prevents CSRF attacks *@
    @Html.HiddenFor(model => model.ProjectId) @* Hidden field to send ticket ID to the server *@

    <input type="submit" asp-controller="Project" asp-action="Delete" value="Delete" class="btn btn-danger" /> @* Submit button to delete Project *@
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" }) @* Link to return to list without deleting *@
}
