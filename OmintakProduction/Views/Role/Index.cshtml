@model IEnumerable<OmintakProduction.Models.Role>

@{
    ViewData["Title"] = "Roles";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Roles Management</h3>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create New Role
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped" id="rolesTable">
                            <thead class="table-dark">
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.RoleId)</th>
                                    <th>@Html.DisplayNameFor(model => model.RoleName)</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.RoleId)</td>
                                        <td>@Html.DisplayFor(modelItem => item.RoleName)</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Edit" asp-route-id="@item.RoleId" class="btn btn-sm btn-warning">
                                                    <i class="fas fa-edit"></i> Edit
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.RoleId" class="btn btn-sm btn-info">
                                                    <i class="fas fa-info-circle"></i> Details
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.RoleId" class="btn btn-sm btn-danger">
                                                    <i class="fas fa-trash"></i> Delete
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#rolesTable').DataTable({
                responsive: true,
                pageLength: 10,
                order: [[0, 'asc']]
            });
        });
    </script>
}
