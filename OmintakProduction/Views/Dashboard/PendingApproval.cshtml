@{
    ViewData["Title"] = "Pending Approval";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="fas fa-clock me-2"></i>
                        Account Pending Approval
                    </h4>
                </div>
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-user-clock fa-4x text-warning"></i>
                    </div>
                    <h3 class="mb-3">Your Account is Under Review</h3>
                    <p class="lead mb-4">
                        Thank you for registering with Omnitak Task Management System. 
                        Your account is currently pending approval by the System Administrator.
                    </p>
                    <div class="alert alert-info" role="alert">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>What happens next?</strong><br>
                        Once approved, the System Administrator will:
                        <ul class="list-unstyled mt-2 mb-0">
                            <li>✓ Assign you an appropriate role</li>
                            <li>✓ Add you to a team (if applicable)</li>
                            <li>✓ Grant access to your personalized dashboard</li>
                            <li>✓ Send you a welcome notification</li>
                        </ul>
                    </div>
                    <p class="text-muted">
                        You will receive a notification email once your account has been approved.
                        Please check back later or contact your System Administrator if you have any questions.
                    </p>
                    
                    <div class="mt-4">
                        <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-secondary">
                            <i class="fas fa-sign-out-alt me-2"></i>
                            Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 15px;
    }
    .card-header {
        border-radius: 15px 15px 0 0 !important;
        border-bottom: none;
    }
    .fa-user-clock {
        opacity: 0.8;
    }
    .list-unstyled li {
        text-align: left;
        margin-bottom: 5px;
    }
</style>
