@model OmintakProduction.Models.Ticket
@{
    ViewData["Title"] = "Ticket Details";
}
<div class="container py-4" style="background: #f8f5f0; min-height: 100vh;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg" style="border-radius: 18px; background: #f3e6d6;">
                <div class="card-header" style="background: #f8f5f0; border-radius: 18px 18px 0 0; color: #7c3aed;">
                    <h4 class="mb-0">Ticket Details</h4>
                </div>
                <div class="card-body" style="background: #fff8f3;">
                    <dl class="row">
                        <dt class="col-sm-4">Title</dt>
                        <dd class="col-sm-8">@Model.Title</dd>
                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                        <dt class="col-sm-4">Due Date</dt>
                        <dd class="col-sm-8">@Model.DueDate</dd>
                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">@Model.Status</dd>
                        <dt class="col-sm-4">Assigned To</dt>
                        <dd class="col-sm-8">
                            @if (Model.AssignedToUser != null)
                            {
                                @Model.AssignedToUser.UserName
                            }
                            else
                            {
                                <span class="text-muted">Unassigned</span>
                            }
                        </dd>
                    </dl>
                    <h5 class="mt-4 mb-2" style="color: #7c3aed;">Tasks for this Ticket</h5>
                    @if (Model.Tasks != null && Model.Tasks.Any())
                    {
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Task Title</th>
                                    <th>Status</th>
                                    <th>Priority</th>
                                    <th>Due Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var task in Model.Tasks)
                                {
                                    <tr>
                                        <td>@task.Title</td>
                                        <td>@task.Status</td>
                                        <td>@task.Priority</td>
                                        <td>@task.DueDate?.ToString("yyyy-MM-dd")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-info">No tasks linked to this ticket yet.</div>
                    }
                    <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
