@{
    Layout = "_LandingLayout";
    ViewData["Title"] = "Welcome";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Landing/index.css" asp-append-version="true" />
}

<div class="landing-container">
    <div class="landing-content">
        <!-- Logo Animation -->
        <div class="logo-container">
            <div class="omnitak-logo">
                <i class="fas fa-tasks"></i>
            </div>
        </div>
        
        <!-- Welcome Text -->
        <div class="welcome-text">
            <h1 class="welcome-title">Welcome to</h1>
            <h2 class="brand-title">Omnitak Management System</h2>
            <p class="welcome-subtitle">Streamline your projects, empower your team</p>
        </div>
        
        <!-- Loading Animation -->
        <div class="loading-animation">
            <div class="loading-dots">
                <div class="dot dot-1"></div>
                <div class="dot dot-2"></div>
                <div class="dot dot-3"></div>
            </div>
        </div>
    </div>
</div>

<script>
    // Auto-redirect to login page after 3 seconds
    setTimeout(function() {
        window.location.href = '@Url.Action("Login", "Account")';
    }, 3000);
    
    // Add click to skip waiting
    document.addEventListener('click', function() {
        window.location.href = '@Url.Action("Login", "Account")';
    });
    
    // Add keyboard support (any key press)
    document.addEventListener('keydown', function() {
        window.location.href = '@Url.Action("Login", "Account")';
    });
</script>
