@model OmintakProduction.Models.BugReport

@{
    ViewData["Title"] = "Create Bug Report";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-bug text-danger me-2"></i>Report New Bug</h2>
    <a asp-action="Index" class="teams-btn teams-btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to List
    </a>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Bug Report Details</h5>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="row">
                <div class="col-md-8">
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" placeholder="Brief description of the bug" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="Severity" class="form-label"></label>
                        <select asp-for="Severity" class="form-select" asp-items="Html.GetEnumSelectList<OmintakProduction.Models.BugSeverity>()"></select>
                        <span asp-validation-for="Severity" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Detailed description of the issue"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="StepsToReproduce" class="form-label"></label>
                <textarea asp-for="StepsToReproduce" class="form-control" rows="4" placeholder="1. Go to...&#10;2. Click on...&#10;3. Observe..."></textarea>
                <span asp-validation-for="StepsToReproduce" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="ExpectedBehavior" class="form-label"></label>
                        <textarea asp-for="ExpectedBehavior" class="form-control" rows="3" placeholder="What should happen?"></textarea>
                        <span asp-validation-for="ExpectedBehavior" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="ActualBehavior" class="form-label"></label>
                        <textarea asp-for="ActualBehavior" class="form-control" rows="3" placeholder="What actually happens?"></textarea>
                        <span asp-validation-for="ActualBehavior" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="ProjectId" class="form-label"></label>
                        <select asp-for="ProjectId" class="form-select" asp-items="ViewBag.ProjectId">
                            <option value="">-- Select Project --</option>
                        </select>
                        <span asp-validation-for="ProjectId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="TaskId" class="form-label"></label>
                        <select asp-for="TaskId" class="form-select" asp-items="ViewBag.TaskId">
                            <option value="">-- Select Related Task (Optional) --</option>
                        </select>
                        <span asp-validation-for="TaskId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="ReportedByUserId" class="form-label"></label>
                        <select asp-for="ReportedByUserId" class="form-select" asp-items="ViewBag.ReportedByUserId"></select>
                        <span asp-validation-for="ReportedByUserId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="AssignedToUserId" class="form-label"></label>
                        <select asp-for="AssignedToUserId" class="form-select" asp-items="ViewBag.AssignedToUserId">
                            <option value="">-- Assign to Developer (Optional) --</option>
                        </select>
                        <span asp-validation-for="AssignedToUserId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="BrowserInfo" class="form-label"></label>
                        <input asp-for="BrowserInfo" class="form-control" placeholder="e.g., Chrome 121.0.6167.139" />
                        <span asp-validation-for="BrowserInfo" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="OperatingSystem" class="form-label"></label>
                        <input asp-for="OperatingSystem" class="form-control" placeholder="e.g., Windows 11, macOS 14.2" />
                        <span asp-validation-for="OperatingSystem" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="Version" class="form-label"></label>
                        <input asp-for="Version" class="form-control" placeholder="Application version" />
                        <span asp-validation-for="Version" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="teams-btn teams-btn-secondary">Cancel</a>
                <button type="submit" class="teams-btn">
                    <i class="fas fa-save me-2"></i>Submit Bug Report
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
