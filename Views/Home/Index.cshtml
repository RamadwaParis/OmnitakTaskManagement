@model OmintakProduction.Controllers.HomePageViewModel
@{
    ViewData["Title"] = "Home";
}
<div class="container py-4" style="background: #f8f5f0; min-height: 100vh;">
    <h2 class="mb-4" style="color: #7c3aed;">Welcome to Omnitak Task Management</h2>
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Teams</h5>
                    <p class="card-text">@Model.Teams?.Count ?? 0</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Projects</h5>
                    <p class="card-text">@Model.Projects?.Count ?? 0</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Tasks</h5>
                    <p class="card-text">@Model.Tasks?.Count ?? 0</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Users</h5>
                    <p class="card-text">@Model.Users?.Count ?? 0</p>
                </div>
            </div>
        </div>
    </div>
    <div class="alert alert-info mt-4">
        <strong>Tip:</strong> Use the sidebar to navigate between teams, projects, tasks, and more.
    </div>
</div>
