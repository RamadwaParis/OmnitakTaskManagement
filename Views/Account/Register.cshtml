@model OmintakProduction.Models.User;

@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

<div class="container-fluid d-flex justify-content-center align-items-center min-vh-100">
    <div class="auth-card">
        <div class="card-header">
            <i class="fas fa-user-plus mb-3" style="font-size: 2rem;"></i>
            <h3 class="mb-0 fw-bold">Create Account</h3>
            <p class="mb-0 mt-2 opacity-75">Join the Omnitak team</p>
        </div>
        <div class="card-body">
            @if (ViewData["RegistrationError"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData["RegistrationError"]
                </div>
            }
            
            <form asp-controller="Account" asp-action="Register" method="post" class="needs-validation" novalidate>

                <div class="mb-4">
                    <label for="username" class="form-label fw-semibold d-block mb-2">
                        <i class="fas fa-user me-2"></i>Username
                    </label>
                    <input type="text" id="username" asp-for="@Model.UserName" name="username" 
                           class="form-control form-control-lg" 
                           placeholder="Choose a username" required />
                    <div class="invalid-feedback">
                        Please enter a username.
                    </div>
                </div>

                <div class="mb-4">
                    <label for="email" class="form-label fw-semibold d-block mb-2">
                        <i class="fas fa-envelope me-2"></i>Email Address
                    </label>
                    <input type="email" id="email" asp-for="Email" name="email" 
                           class="form-control form-control-lg" 
                           placeholder="Enter your email address" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label for="password" class="form-label fw-semibold d-block mb-2">
                        <i class="fas fa-lock me-2"></i>Password
                    </label>
                    <input type="password" id="password" asp-for="Password" name="password" 
                           class="form-control form-control-lg" 
                           placeholder="Choose a strong password" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-grid gap-3">
                    <button type="submit" class="btn btn-info btn-lg shadow-sm">
                        <i class="fas fa-user-plus me-2"></i> Create Account
                    </button>

                    <div class="text-center">
                        <span class="text-muted">Already have an account?</span>
                    </div>

                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-sign-in-alt me-2"></i> Sign In
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>
