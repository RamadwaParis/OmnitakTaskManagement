@model OmintakProduction.Models.UnifiedDashboardViewModel
@{
    ViewData["Title"] = "Unified Dashboard";
}
<style>
body, .container-fluid, .card, .table, .form-control, .btn, .list-group-item {
    background-color: #f8f5f0 !important; /* Nude background for boards */
}
.card-header.bg-success, .card-header.bg-info {
    background-color: #7c3aed !important; /* Teams purple for landing page and team sections */
    color: #fff !important;
}
.card-body {
    background: #fff8f3 !important;
}
.table th, .table td {
    background: #f3e6d6 !important;
    color: #333;
}
</style>
<div class="container-fluid py-4">
    <h2 class="mb-4" style="color: #7c3aed;"><i class="fas fa-tachometer-alt text-primary me-2"></i>Unified Dashboard</h2>
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <i class="fas fa-project-diagram me-2"></i>Projects
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Team</th>
                                <th>Status</th>
                                <th>Due Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var project in Model.Projects)
                            {
                                <tr>
                                    <td>@project.ProjectName</td>
                                    <td>@project.Team?.TeamName</td>
                                    <td>@project.Status</td>
                                    <td>@project.DueDate.ToString("MMM dd, yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <i class="fas fa-users me-2"></i>Teams
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        @foreach (var team in Model.Teams)
                        {
                            <li class="list-group-item" style="background: #f3e6d6; color: #7c3aed;">
                                <strong>@team.TeamName</strong>
                                <div class="mt-2">
                                    <span style="color: #333;">Active Members:</span>
                                    @foreach (var member in team.TeamMembers.Where(u => u.isActive))
                                    {
                                        <span class="badge me-1 mb-1" style="background: #e0e7ff; color: #7c3aed; border: 1px solid #d1c4b7;">@member.UserName</span>
                                    }
                                </div>
                                <div class="mt-2">
                                    <span style="color: #333;">All Members:</span>
                                    @foreach (var member in team.TeamMembers)
                                    {
                                        <span class="badge me-1 mb-1" style="background: #f3e6d6; color: #333; border: 1px solid #d1c4b7;">@member.UserName</span>
                                    }
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <i class="fas fa-ticket-alt me-2"></i>Tickets
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Project</th>
                                <th>Assigned To</th>
                                <th>Status</th>
                                <th>Tasks</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ticket in Model.Tickets)
                            {
                                <tr>
                                    <td>@ticket.Title</td>
                                    <td>@ticket.Project?.ProjectName</td>
                                    <td>@ticket.AssignedToUser?.UserName</td>
                                    <td>@ticket.Status</td>
                                    <td>@(ticket.Tasks != null ? ticket.Tasks.Count : 0)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
